{
  "name": "flare-tools",
  "version": "0.0.0",
  "description": "Spark and Songbird tools to help setup a new account and delegate to an FTSO.",
  "author": "jfgrissom @jfgrissom",
  "bin": {
    "ft": "./bin/run"
  },
  "homepage": "https://github.com/jfgrissom/flare-tools",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "jfgrissom/flare-tools",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "crypto": "^1.0.1",
    "ethers": "^5.5.3"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "globby": "^11",
    "mocha": "^9",
    "oclif": "^2",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "oclif": {
    "bin": "ft",
    "dirname": "oex",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prebuild": "yarn types",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "types": "typechain --target=ethers-v5 artifacts/contracts/abis/*.json --out-dir=src/types",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/jfgrissom/flare-tools/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
